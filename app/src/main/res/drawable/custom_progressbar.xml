<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="@android:color/white"
                android:startColor="@android:color/white"
                android:endColor="@android:color/white"/>
            <size
                android:width="@dimen/dp_15"
                android:height="@dimen/dp_15"/>
            <corners android:radius="@dimen/dp_5"/>
        </shape>
    </item>

    <item android:id="@+id/progress">
        <clip>
            <layer-list>
                <item
                    android:bottom="@dimen/dp_1"
                    android:top="@dimen/dp_1"
                    android:left="@dimen/dp_1"
                    android:right="@dimen/dp_1">
                    <shape>
                        <gradient
                            android:angle="-90"
                            android:centerColor="@color/colorGray"
                            android:startColor="@color/colorGray"
                            android:endColor="@color/colorGray"/>
                        <size
                            android:width="@dimen/dp_15"
                            android:height="@dimen/dp_15" />
                        <corners android:radius="@dimen/dp_5" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>
